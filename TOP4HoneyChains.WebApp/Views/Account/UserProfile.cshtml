@model TOP4HoneyChains.Entities.MVVM.UserProfile

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="row">

    <div class="col-lg-12">

        <!-- Dropdown Card Example -->
        <div class="card shadow mb-4">

            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">User Profile</h6>
            </div>
            <div class="card-body">
                <div class="mt-4 mb-2">
                    <p><b>User Name</b> </p>
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" value="@Model.UserName" readonly class="form-control form-control-user" id="exampleFirstName" placeholder="First Name">
                    </div>
                    <hr />
                </div>
                <div class="mt-4 mb-2">
                    <p><b>Email</b> </p>
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" value="@Model.Email" readonly class="form-control form-control-user" id="exampleFirstName" placeholder="First Name">
                    </div>
                    <hr />
                </div>
                <div class="mt-4 mb-2">
                    <p><b>Create Date</b> </p>
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" value="@Model.CreateDate" readonly class="form-control form-control-user" id="exampleFirstName" placeholder="First Name">
                    </div>
                    <hr />
                </div>
                <div class="mt-4 mb-2">
                    <p><b>Last Activity Date</b> </p>
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" value="@Model.LastActitiyDate" readonly class="form-control form-control-user" id="exampleFirstName" placeholder="First Name">
                    </div>
                    <hr />
                </div>
                <div class="mt-4 mb-2">
                    <p><b>Roles</b></p>
                    <div class="col-sm-6 mb-3 mb-sm-0">

                        @foreach (var role in Model.Roles)
                        {

                            <input type="checkbox" checked="checked" name="@role" disabled /> <label for="@role">@role</label>
                        }
                    </div>
                    <hr />
                </div>
            </div>

        </div>
    </div>

</div>
